@using BCP.CROSS.MODELS
@using BCP.CROSS.MODELS.Reportes
@using BCP.CROSS.MODELS.Reportes.Requests
@using Newtonsoft.Json
@using Sarc.WebApp.Components.Reportes
@using Sarc.WebApp.Models.Reportes
@using System.Data
@model CobrosDevolucionesViewModel
@{
    ViewData["Title"] = "Reporte Cobros Devoluciones ";
    bool responseExist = false;
    Meta meta = new Meta();
    var tipo = ViewBag.tipo;
    var data = "[{}]";
    var dataJson = Json.Serialize(data);
    List<CobrosDevolucionesModel> list = new();
    var excelTitle = "Reporte_CD_" + DateTime.Now.ToString("yyyyMMdd") + ".xlsx";
    if (ViewBag.response != null)
    {
        meta = ViewBag.response.Meta;
        responseExist = true;
    }
}
<div class="container">
    <div class="card bg-dark">
        <div class="card-body">
            <form asp-action="CobrosDevoluciones" asp-controller="Reportes" method="post" class="row">
                <div class="col-12 col-md-4 my-2">
                    <label for="FechaIni" class="form-label">Fecha de inicio</label>
                    <input type="date" class="form-control" asp-for="FechaInicio" id="FechaIni">
                </div>
                <div class="col-12 col-md-4  my-2">
                    <label for="FechaFin" class="form-label">Fecha Final</label>
                    <input type="date" class="form-control" asp-for="FechaFin" id="FechaFin">
                </div>
                <div class="col-12 col-md-4  my-2">
                    <label for="Funcionario" class="form-label">Funcionario</label>
                    <input class="form-control" asp-for="Funcionario" id="Funcionario">
                </div>
                <div class="col-12 col-md-4  my-2">
                    <label for="Canal" class="form-label">Canal</label>
                    <select class="form-select" aria-label="Default select example" asp-for="Canal">
                        @{
                            switch (ViewBag.Canal)
                            {
                                case "todos":
                                    <option selected value="0">Todos</option>
                                    <option value="2">PR</option>
                                    <option value="1">SW</option>
                                    break;  // Always break each case
                                case "pr":
                                    <option selected value="2">PR</option>
                                    break;
                                    case "sw":
                                    <option selected value="1">SW</option>
                                    break;
                                default:
                                    <option selected value="0">Todos</option>
                                    <option value="2">PR</option>
                                    <option value="1">SW</option>
                                    break;
                            }
                        }
                        
                    </select>
                </div>
                <div class="col-12 col-md-4  my-2">
                    <label for="Estado" class="form-label">Estado</label>
                    <select class="form-select" aria-label="Default select example" asp-for="Estado">
                        <option selected value="-1">Todos</option>
                        <option value="1">Realizado</option>
                        <option value="0">No Realizado</option>
                    </select>
                </div>
                <div class="col-12 col-md-4  my-2">
                    <label for="Tipo" class="form-label">Tipo</label>
                    <select class="form-select" aria-label="Default select example" asp-for="Tipo">
                        <option selected value="0">Todos</option>
                        <option value="2">Devolucion</option>
                        <option value="1">Cobro</option>
                    </select>
                </div>
                <div class="col-12 mt-2">
                    <button type="submit" class="btn btn-primary mb-3">Generar Reporte</button>
                </div>
            </form>
            @if (responseExist)
            {
                @if (ViewBag.response.Data != null)
                {
                    list = ViewBag.response.Data;
                    dataJson = Json.Serialize(list.ToArray());
                    <component type="typeof(CobrosDevolucionesComponent)" render-mode="ServerPrerendered" param-Data='ViewBag.response.Data' />
                    <button type="button" id="downloadexcel" class="btn btn-primary">Descargar Excel</button>
                }
                else
                {
                    <div class="alert alert-warning" role="alert">
                        @meta.Msj
                    </div>
                }
            }
        </div>
    </div>
</div>
@section scripts{
<script type="text/javascript">
    var data=@dataJson;
    var title="@excelTitle";
        $("#downloadexcel").click(function(){
                GenerarExcel(data,title);
        });
</script>
}