@using Sarc.WebApp.Models.Caso
@model ProcessCasoViewModel
@{
    ViewData["Title"] = "Proceso Registro";
}

<div class="container mt-5">
    <div class="row justify-content-sm-center">
        <div class="col-sm-6 align-self-center">
            <article class="card bg-bgcontent-dark rounded shadow mb-3" style="min-width: 350px;">
                <div class="card-header">
                    @switch (@Model?.TipoRegistro)
                    {
                        case "R":
                            <H3>RECLAMO</H3>
                            break;
                        case "S":
                            <H3>SOLICITUD</H3>
                            break;
                        case "C":
                            <H3>CONSULTA</H3>
                            break;
                        default:
                            <p>Caso no identificado</p>
                            break;
                    }
                </div>
                <div class="card-body d-flex">
                    <div class="rounded-circle mr-3">
                        <i class="fas fa-user-check text-success"></i>
                    </div>

                    <div class="pl-3">
                        <h5 class="card-title">@Model?.Cliente?.NombreCompleto</h5>
                        <p>@Model?.Cliente?.Idc</p>
                    </div>

                </div>
            </article>
            <article class="card bg-bgcontent-dark rounded shadow mb-3 text-center" style="min-width: 350px;">
                @if (@Model != null && !string.IsNullOrEmpty(@Model?.Response?.Data?.NroCarta))
                {
                <div class="card-body border-info">
                    <h5 class="card-title" id="NroCaso">@Model?.Response?.Data.NroCarta</h5>
                    <a class="card-text" href="@Model?.Response?.Data.RutaSharePoint" target="_blank">@Model?.Response?.Data.RutaSharePoint</a>
                    <br />
                    <p class="card-text mt-3">Code: @Model?.Response?.Meta.StatusCode : @Model?.Response?.Meta.Msj</p>
                    <br />
                    <input type="button" class="btn btn-success mt-3 mb-5" value="Descargar comprobante" onclick="location.href='@Url.Action("DownloadPdf", "Casos")'" />
                    <br />
                    <a asp-area="" asp-controller="Cliente" asp-action="BusquedaCliente">Nuevo Registro</a>
                </div>
                }
                else if (@Model != null && @Model?.Response?.Meta != null)
                {
                    <div class="card-body border-info ">
                        <p class="card-text">Code: @Model.Response.Meta.StatusCode : @Model.Response.Meta?.Msj</p>
                    </div>

                }
                else
                {
                    <div class="card-body">
                         <p class="card-text">Caso no procesado</p>
                    </div>
                }

            </article>
        </div>
    </div>
</div>



