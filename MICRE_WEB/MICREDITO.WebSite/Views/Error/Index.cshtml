
<div class="container">
    <div class="pagina_no_existe">

        <img src="~/Content/Image/pantalla_error.svg" />

        <h3>@ViewBag.Title</h3>
        <p>@ViewBag.Description</p>

        @Html.ActionLink("Ir a la Bandeja", "Index", "Home", new { }, new { @class = "btn btn-primary" })

        @if (ViewBag.Controlado == true)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <p><b>DETALLE: </b>@ViewBag.Details</p>
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }
    </div>
</div>