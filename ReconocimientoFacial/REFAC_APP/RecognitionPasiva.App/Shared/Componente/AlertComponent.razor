<h3>AlertComponent</h3>

<div style="position: fixed; top: 0px; left: 0px; object-fit: cover; width: 100%; height: 100%; z-index: 100; background: rgba(1, 1, 1, 0.3); backdrop-filter: blur(2px); text-align: center; display: flex; justify-content: center; align-items: center; ">
    <div style="background: white; margin: 50px; padding: 25px 50px;">
        <img src="img/@icono" width="50" />
        <p style="margin: 15px">@mensaje</p>
        <button @onclick="EventBoton">@btnText</button>
    </div>
</div>

@code {
    [Parameter] public string icono { get; set; }
    [Parameter] public string mensaje { get; set; }
    [Parameter] public string btnText { get; set; }
    [Parameter] public EventCallback EventBoton { get; set; }
}
